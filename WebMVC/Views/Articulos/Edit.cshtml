@model DTOs.ArticuloDTO

@{
    ViewData["Title"] = "Ver Artículo";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center">Detalle del Artículo</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Campos del Formulario -->
            <div class="form-group mb-3">
                <label asp-for="Id" class="form-label">ID del Artículo</label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <!-- Aquí mostramos la imagen cargada -->
            <div id="imagePreview" class="mt-3 text-center">
                <img src="@Model.ImageUrl" alt="Imagen del Artículo" class="img-fluid rounded" style="max-width: 150px; max-height: 150px; object-fit: contain;" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label">Imagen</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="URL de la imagen" onchange="loadImage()" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Nombre del artículo" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Descripción</label>
                <input asp-for="Description" class="form-control" placeholder="Descripción del artículo" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PurchasePrice" class="form-label">Precio de Compra</label>
                <input asp-for="PurchasePrice" class="form-control" placeholder="Precio de compra" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalePrice" class="form-label">Precio de Venta</label>
                <input asp-for="SalePrice" class="form-control" placeholder="Precio de venta" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SaleUnitPrice" class="form-label">Precio por Unidad</label>
                <input asp-for="SaleUnitPrice" class="form-control" placeholder="Precio por unidad" />
                <span asp-validation-for="SaleUnitPrice" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MinimumPurchase" class="form-label">Compra Mínima</label>
                <input asp-for="MinimumPurchase" class="form-control" placeholder="Cantidad mínima para comprar" />
                <span asp-validation-for="MinimumPurchase" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Stock" class="form-label">Stock Disponible</label>
                <input asp-for="Stock" class="form-control" placeholder="Cantidad en stock" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ExpirationDate" class="form-label">Fecha de Expiración</label>
                <input asp-for="ExpirationDate" class="form-control" placeholder="Fecha de expiración" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>

            <!-- Botón de Enviar -->
            <div class="form-group mb-3 text-center">
                <button type="submit" class="btn btn-success w-100" asp-action="Edit">Guardar Cambios <i class="fas fa-save"></i></button>
            </div>
            <span class="text-danger">@ViewBag.Mensaje</span>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="List" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Volver al listado
    </a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Función para mostrar la imagen cuando se cambie la URL
        function loadImage() {
            var imageUrl = document.querySelector('input[name="ImageUrl"]').value;
            var imagePreview = document.getElementById('imagePreview');
            var img = imagePreview.querySelector('img');
            img.src = imageUrl;
        }
    </script>
}

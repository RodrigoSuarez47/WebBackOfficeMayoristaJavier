@model DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-center my-4 text-danger"><i class="fas fa-user-times"></i> Eliminar Usuario</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center mb-3 text-warning"><i class="fas fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este usuario?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">
                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4 fw-bold">
                        <i class="fas fa-lock"></i> @Html.DisplayNameFor(model => model.Password)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Password)
                    </dd>
                </dl>

                <div class="text-center mt-4">
                    <form asp-action="Delete">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash-alt"></i> Eliminar Usuario
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver al listado
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

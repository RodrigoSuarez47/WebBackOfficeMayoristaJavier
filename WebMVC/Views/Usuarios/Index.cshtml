@model IEnumerable<DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h1 class="text-center my-4"><i class="fas fa-users"></i> Listado de Usuarios</h1>

<div class="container">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Agregar Usuario
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-id-badge"></i> @Html.DisplayNameFor(model => model.First().Id)</th>
                    <th><i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.First().Name)</th>
                    <th><i class="fas fa-lock"></i> @Html.DisplayNameFor(model => model.First().Password)</th>
                    <th class="text-center"><i class="fas fa-cogs"></i> Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if(Model !=null && Model.Count() > 0)
                {
                    @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>******</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }else {
                    <h6 class="text-center text-danger">@ViewBag.Mensaje</h6>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a asp-controller="Articulos" asp-action="List" class="btn btn-outline-secondary">
            <i class="fas fa-home"></i> Volver al Inicio
        </a>
    </div>
</div>
